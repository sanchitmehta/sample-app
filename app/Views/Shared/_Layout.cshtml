<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Core App</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <!-- Add more navigation links here -->
            </ul>
        </nav>
    </header>
    <div class="container">
        @using (Html.RenderBody())
        {
            // Ensure RenderBody is properly disposed of
        }
    </div>
    <footer>
        <p>&copy; 2023 - My ASP.NET Core App</p>
    </footer>
    <script src="~/js/site.js"></script>
    @await DisposeScriptsAsync()
</body>
</html>

@functions {
    public override void Dispose()
    {
        // Implement disposal logic for IDisposable dependencies, if any exist
        if (ViewData != null)
        {
            ViewData.Clear();
        }
    }

    private async Task DisposeScriptsAsync()
    {
        // Example of cleaning and releasing resources after use
        // Dispose of large collections or objects like Cache, Data tables, etc.
        await Task.CompletedTask;
    }
}
